#include<iostream>
using namespace std;
int main()
{
    int a,b,c,d=1,i,j,k,n;
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n-i;j++)
        {
            cout<<" ";
        }
        for(k=1;k<=(2*i)-1;k++)
        {
            if(k==1 || k==(2*i)-1)
            {
                cout<<d;
            }
            else
            {
                cout<<"0";
            }
        }
        d++;
        cout<<"\n";
    }
    return 0;
}
