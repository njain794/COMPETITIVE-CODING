#include<iostream>
using namespace std;
int main()
{
    int a,b,c,d=1,i,j,k,n;
    cin>>n;
    c=n-1;
    for(i=0;i<n;i++)
    {
        for(j=0;j<c;j++)
        {
            cout<<" ";
        }
        for(k=0;k<d;k++)
        {
            cout<<"*";
        }
        c--;
        d++;
        cout<<"\n";
    }
    c=n-1;
    for(i=1;i<n;i++)
    {
        for(j=0;j<i;j++)
        {
            cout<<" ";
        }
        for(k=0;k<c;k++)
        {
            cout<<"*";
        }
        c--;
        cout<<"\n";
    }
    return 0;
}
