#include<iostream>
using namespace std;
int main()
{
    int a,b,c,d,i,j,k,n;
    cin>>n;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n-i;j++)
        {
            cout<<" ";
        }
        for(k=0;k<(2*i)+1;k++)
        {
            if((k%2)!=0)
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }
        cout<<"\n";
    }
    return 0;
}
